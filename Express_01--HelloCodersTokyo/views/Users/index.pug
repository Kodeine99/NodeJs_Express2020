    .container.pt-5
        h1 
            span.mr-4 Users 
            a.btn.btn-primary.pb-2(href="/Users/Create") New
        .d-flex.align-item-center
            form.ml-auto(action="Users/search" method="GET" class="d-flex")
                input(type="text" name="q" value="" class="form-control")
                button(class="btn btn-primary ml-2") Search
        table.table
            tr
                th Name
                th Phone
                th Actions

            each user in Users
                tr
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-outline-info(href='/Users/' +user.id) View
